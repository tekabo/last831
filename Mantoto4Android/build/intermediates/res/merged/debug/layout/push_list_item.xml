<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="60dip"
	android:id="@+id/main_rl" android:background="#fdfdfd"  android:gravity="center">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:id="@+id/header_tv"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textSize="20dip"
			android:textColor="#1c1c1c"
			android:lines="1" android:maxLength="30"
			android:layout_weight="1"
			/>
		<TextView android:id="@+id/body_tv"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textSize="20dip"
			android:textColor="#1c1c1c"
			android:lines="1" android:maxLength="30"
			android:gravity="center_vertical" android:layout_weight="1" />
	</LinearLayout>
	<ImageView android:layout_alignParentRight="true" android:layout_marginRight="10dip"
		android:background="@drawable/arrow_right" android:layout_centerVertical="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</RelativeLayout>