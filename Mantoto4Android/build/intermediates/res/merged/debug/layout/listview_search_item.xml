<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:minHeight="95dip" android:orientation="horizontal"
	android:gravity="center_vertical" android:id="@+id/product_list_item_bg">
	<FrameLayout android:scaleType="fitCenter"
		android:layout_marginTop="3dip" android:background="@drawable/user_bg"
		android:layout_width="66dip" android:layout_height="66dip">
		<ImageView android:id="@+id/item_icon"
			android:layout_gravity="center" android:layout_width="60dip"
			android:layout_height="60dip" />
	</FrameLayout>
	<LinearLayout android:orientation="vertical" android:layout_marginLeft="5dip" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_marginRight="5dip"
		android:layout_weight="1" >
	<TextView android:id="@+id/item_time" android:textColor="@color/black"
		android:layout_marginLeft="5dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginRight="5dip"
		 android:textSize="14dip"  />
	<TextView android:id="@+id/item_title" android:textColor="@color/black"
		android:layout_marginLeft="5dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginRight="5dip"
		 android:textSize="18dip"  android:textStyle="bold" />
	<TextView android:id="@+id/item_content" android:textColor="@color/black"
		android:layout_marginLeft="5dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginRight="5dip"
		 android:textSize="14dip" android:lines="2"
		  />
		</LinearLayout>
	<ImageView android:id="@+id/item_image_arrow"
		android:background="@drawable/arrow_right" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
</LinearLayout>
