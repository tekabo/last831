<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="@color/background_color"
	android:layout_height="fill_parent">
	<include  android:id="@+id/common_back" layout="@layout/include_login_topbar" />
	
	<LinearLayout android:background="@drawable/item_bg"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:orientation="vertical" android:gravity="center_vertical"
		android:layout_marginTop="8dip" android:layout_width="fill_parent"
		android:layout_height="40dip">
		<TextView android:id="@+id/prompt_text"
			android:textSize="14dip" android:textColor="@color/black"
			android:gravity="center_vertical" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/find_password_prompt" 
			android:layout_marginLeft="10dip" android:layout_marginTop="0dip"/>
	</LinearLayout>
	
</LinearLayout>
