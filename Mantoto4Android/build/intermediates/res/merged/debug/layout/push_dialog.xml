<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:background="#eceded">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="400dip"
        android:gravity="center|left"
        android:orientation="vertical">
        
        <ScrollView 
	android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="#ffffff"
	android:scrollbars="none">
	<LinearLayout 
		android:orientation="vertical" android:layout_width="fill_parent"
	 android:layout_height="fill_parent"
		android:id="@+id/main_ll">
		
	    <LinearLayout 
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1">
		<ImageView android:id="@+id/push_img" android:layout_width="fill_parent" android:maxHeight="240dip"
			android:layout_height="240dip"  android:gravity="center"/>
		<TextView android:id="@+id/push_tv" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:gravity="center_horizontal"
			android:layout_marginTop="5dip" android:textSize="18dip"
			android:textColor="#555555"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:gravity="center">
            <View  
   				android:layout_width="300dip"  
    			android:layout_height="10dip" 
   				android:background="#999999" />
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/normal_dialog_2"
        android:layout_width="fill_parent"
        android:layout_height="40dip">
        <TextView 
            android:id="@+id/dialog_button_1"
            android:layout_width="149dip"
            android:layout_height="40dip"
            android:text="查看更多"
            android:gravity="center"            
    		android:textColor="#00a4f4"
            android:textSize="@dimen/dialog_title_text_size"
		/>
        <View  
   				android:layout_width="1px"  
    			android:layout_height="40dip" 
   				android:background="#999999" />
        <TextView 
            android:id="@+id/dialog_button_2"
            android:layout_width="150dip"
            android:layout_height="40dip"            
            android:text="关闭"
            android:gravity="center"
    		android:textColor="#00a4f4"
            android:textSize="@dimen/dialog_title_text_size"
		/>
    </LinearLayout>
</LinearLayout>