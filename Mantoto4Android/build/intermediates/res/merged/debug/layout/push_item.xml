<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="#ffffff"
	android:scrollbars="none">
	<LinearLayout 
		android:orientation="vertical" android:layout_width="fill_parent"
	 android:layout_height="fill_parent"
		android:id="@+id/main_ll">
		
	    <LinearLayout 
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1">
		<ImageView android:id="@+id/push_img" android:layout_width="fill_parent" android:maxHeight="240dip"
			android:layout_height="240dip"  android:gravity="center"/>
		<TextView android:id="@+id/push_tv" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:gravity="center_horizontal"
			android:layout_marginTop="5dip" android:textSize="18dip"
			android:textColor="#555555"/>
		</LinearLayout>
		<Button android:id="@+id/more_btn" android:text="关闭" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_gravity="center"
			android:layout_marginTop="20dip" android:paddingLeft="10dip" android:textSize="18dip"
			
                android:background="@drawable/blue_btn_normal"
                android:textColor="@color/blue_btn_txt_normal"
			android:paddingRight="10dip"/>
	</LinearLayout>
</ScrollView>