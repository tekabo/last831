<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/update_dialog_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="20dp" >
    
    <com.wuxianyingke.property.views.UpdateProgressBar
       android:id="@+id/update_progressbar"
       style="@style/ProgressBar_Mini"  
       android:layout_width="200dp"  
       android:layout_height="wrap_content"  
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:progress="100"  
       android:layout_marginBottom="20dp"
       android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/update_btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/update_confirm_bg"
        android:text="@string/updating_cancle"
        android:textColor="@color/white"
        android:textSize="@dimen/update_btn_size" />

</LinearLayout>