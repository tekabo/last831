<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_Commit_quanmaId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="券码："
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/order_Commit_CodeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="5561 R8ZW WARM"
                android:textColor="@color/black"
                android:textSize="16sp" />
            
            <TextView
                android:id="@+id/order_Commit_UsedId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="未使用"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    <!-- 二维码-->
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/order_Commit_two_DimisionCodeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/code_logo" />

        </LinearLayout>

</LinearLayout>