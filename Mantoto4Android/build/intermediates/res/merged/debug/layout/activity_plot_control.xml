<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.wuxianyingke.property.activities.SetMessageActivity">
    <include layout="@layout/include_main_topbar"
        android:id="@+id/common_back" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="44dp"/>
        <Button
            android:id="@+id/plot_control_location"
            android:layout_width="0dp"
            android:layout_weight="680"
            android:layout_height="match_parent"
            android:background="@drawable/btn_plot"
            android:text="定位"
            android:textSize="18sp"
            android:textColor="@color/base_color_text_black"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="44dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="44dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="680"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:text="查询"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="44dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="44dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="680"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="请输入门牌号"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="44dp"/>
    </LinearLayout>
</LinearLayout>