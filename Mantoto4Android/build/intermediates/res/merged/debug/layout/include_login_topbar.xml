<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/topbar_bg" android:orientation="horizontal"
	android:layout_height="wrap_content">
	<Button android:id="@+id/topbar_left"
	 	android:textSize="@dimen/topbar_left_text_size"
		android:layout_centerVertical="true" android:textColor="@color/white"
		android:layout_marginLeft="8dip" android:background="@drawable/style_topbar_left"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" 
		android:paddingLeft="5dip"/>
	<TextView android:textSize="20.0dip" android:textColor="@color/white"
		android:layout_centerInParent="true" android:id="@+id/topbar_txt"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
</RelativeLayout>
