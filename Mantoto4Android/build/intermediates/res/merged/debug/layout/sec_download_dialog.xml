<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/sec_dlg_bg">
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="30dip"
		android:layout_marginTop="15dip">
		<ImageView
			android:src="@drawable/sec_update_waiting"
			android:layout_marginLeft="28dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:text="下载程序中，请稍等......"
			android:textSize="20dip"
			android:textColor="#ffffffff"
			android:layout_marginLeft="10dip"

			android:layout_weight="1"
			android:shadowDx="1.5"
			android:shadowDy="1.3"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:gravity="center_vertical" />
		<!--android:shadowColor="#0f0f0f"
		android:shadowRadius="0.5"加上报错-->
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:background="@drawable/sec_div_line"
		android:layout_marginTop="5dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
	</LinearLayout>

	<ProgressBar style="?android:attr/progressBarStyleHorizontal"
		android:id="@+id/downloadProgress"
		android:layout_width="fill_parent"
		android:max="100"
		android:progress="0"
		android:layout_height="wrap_content"
		android:layout_marginLeft="28dip"
		android:layout_marginRight="28dip"
		android:layout_marginTop="25dip" />

	<View
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="1dip" />
	<Button
		android:id="@+id/downloadCancel"
		android:layout_width="wrap_content"
		android:layout_marginBottom="5dip"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/style_sec_btn"
		android:textColor="@color/white"
		android:text="取消下载"
		android:textSize="18dip" />
</LinearLayout>
