<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recharge_select_bg"
    android:orientation="vertical" >

<LinearLayout 
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/rechargeCouponMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/base_color_text_black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="代金券20元确定充值"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="智慧城市WIFI时长"
        android:textColor="@color/base_color_text_black"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="18sp"/>
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/recharge_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:paddingRight="30dp"
        android:paddingLeft="23dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/recharge_confim_bg"
        android:text="取消"/>
    <Button
        android:id="@+id/recharge_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingLeft="23dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/recharge_confim_bg"
        android:text="确定"/>
</LinearLayout>
</LinearLayout>
</LinearLayout>
