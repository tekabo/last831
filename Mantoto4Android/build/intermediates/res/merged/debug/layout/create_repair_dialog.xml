<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:background="@drawable/create_repair_dialog_bg">

	<TextView android:id="@+id/popDialogTitle"
			  android:textSize="16dip"
			  android:textColor="#AAAAAA"
			  android:layout_weight="1"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:gravity="center" 
			  android:layout_gravity="center"
			  android:layout_marginTop="15dip"
			  android:layout_marginLeft="34dip"
			  android:layout_marginRight="34dip"
			  android:layout_marginBottom="15dip" />

	<View
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="#dbd7d4" />

	<TextView
			android:id="@+id/popDialogInfo"
			android:textSize="16dip"
			android:textColor="#AAAAAA"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="34dip"
			android:layout_marginLeft="34dip"
			android:layout_marginRight="34dip"
			android:layout_marginBottom="34dip"
			android:gravity="center"
			android:layout_gravity="center"
			/>

	<View
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="#dbd7d4" />

	<TextView 
			android:id="@+id/ButtonOK"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center" 
			android:layout_weight="1"
			android:layout_gravity="center"
			android:layout_marginTop="15dip"
			android:layout_marginLeft="34dip"
			android:layout_marginRight="34dip"
			android:layout_marginBottom="15dip"
			android:text="完成"
			android:textSize="16dip"
			android:textColor="#7fd8ff" />


</LinearLayout>
