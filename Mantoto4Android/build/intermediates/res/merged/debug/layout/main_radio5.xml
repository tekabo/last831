<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/IncludeMainTopBarInclude"
        layout="@layout/include_main_topbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <LinearLayout
                android:id="@+id/CommonInformationLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_item_height"
                android:layout_marginTop="10dip"
                android:background="@drawable/style_item_top"
                android:orientation="horizontal" >

             <!--    <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="推荐应用"
                    android:textColor="@color/black"
                    android:textSize="@dimen/more_item_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/list_divider" />

            <LinearLayout
                android:id="@+id/CommonInformationLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_item_height"
                android:background="@drawable/style_item_center"
                android:orientation="horizontal" > -->

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="常用信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/more_item_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/list_divider" />

            <LinearLayout
                android:id="@+id/PaidServicesLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_item_height"
                android:background="@drawable/style_item_center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="有偿服务"
                    android:textColor="@color/black"
                    android:textSize="@dimen/more_item_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/list_divider" />

            <LinearLayout
                android:id="@+id/LivingCircleLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_item_height"
                android:background="@drawable/style_item_center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="生活圈"
                    android:textColor="@color/black"
                    android:textSize="@dimen/more_item_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/list_divider" />

            <LinearLayout
                android:id="@+id/PropertyPhoneLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_item_height"
                android:background="@drawable/style_item_center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="物业电话"
                    android:textColor="@color/black"
                    android:textSize="@dimen/more_item_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/ic_incall_ongoing" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/list_divider" />

            <LinearLayout
                android:id="@+id/FleaListLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_item_height"
                android:background="@drawable/style_item_center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="跳蚤市场"
                    android:textColor="@color/black"
                    android:textSize="@dimen/more_item_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/list_divider" />

            <LinearLayout
                android:id="@+id/ChangePasswordLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_item_height"
                android:background="@drawable/style_item_center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="修改密码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/more_item_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/list_divider" />

            <LinearLayout
                android:id="@+id/QuitLoginLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_item_height"
                android:background="@drawable/style_item_bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="退出登录"
                    android:textColor="@color/black"
                    android:textSize="@dimen/more_item_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>