<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <!-- 导航 -->

    <include android:id="@+id/common_back" layout="@layout/include_main_topbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="费用详情"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginLeft="17dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" >
    </LinearLayout>
    <!-- 订单名称 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_Commit_NamesId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:text="订单名称："
                android:textColor="@color/base_color_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_Commit_NameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="手切羊肉"
                android:textColor="@color/base_color_text_black"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:background="@drawable/list_line"/>

        </LinearLayout>
        <!-- 购买数量 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_Commit_CountId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_vertical"
                android:text="订单数量："
                android:textColor="@color/base_color_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_Commit_NumbersId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:textColor="@color/base_color_text_black"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:background="@drawable/list_line"/>

        </LinearLayout>

        <!-- 订单 总价 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_Commit_TotalId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:text="商品金额:"
                android:textColor="@color/base_color_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_Commit_TotalPrice2Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="40元"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:background="@drawable/list_line"/>

        </LinearLayout>

        <!-- 收货地址 -->

        <LinearLayout
            android:id="@+id/ll_order_entityId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="收货地址:"
                android:textColor="@color/base_color_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_Commit_Address2Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="烟台市银东国际2-01-1-11-1-1;孙斌收"
                android:textColor="@color/base_color_text_black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


    <!-- 分隔线 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#dfdfdf" >
    </LinearLayout>

    <!-- 总价 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/order_Commit_PayId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/gray_btn_login"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="选择支付方式"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_line"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zhifubaoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_linearlayout_pay"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
         >

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/zhifu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:text="支付宝支付"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/zhifubaoSelect"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            android:background="@drawable/ring_normal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weixinLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bg_linearlayout_pay"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
       >

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/weixin" />

        <TextView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:text="微信支付"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/weixinSelect"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            android:background="@drawable/ring_normal"
            android:padding="1dp" />
    </LinearLayout>

    <!-- 支付宝支付 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/order_Commit_ZhiFuBaoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/alipay" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order_Commit_PayStyleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="支付宝支付"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_Commit_TuijianId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="推荐使用"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/order_Commit_PaySelect2Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="check"
            android:src="@drawable/order_commit_true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <!-- 提交订单 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        >
        <Button
            android:id="@+id/order_Commit2Id"
            android:layout_width="326dp"
            android:layout_height="40dp"

            android:background="@drawable/btn_bg"
            android:onClick="pay"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

    <include
        android:id="@+id/view_network_error"
        layout="@layout/network_error"
        android:visibility="gone" />

</LinearLayout>