<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/LifeLogoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/code_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/LifeHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="银通宽带1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/LifeContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="银通宽带用户app缴费渠道，支持支付宝用户在线缴费1。"
            android:textColor="@color/black"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/LifepayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要缴费"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/LifeLeftImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/style_pay_right" />
    </LinearLayout>

</LinearLayout>