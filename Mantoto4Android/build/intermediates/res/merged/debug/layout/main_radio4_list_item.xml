<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainRadio4ListItemLinearLayout"
       android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"> 

    <LinearLayout
        android:id="@+id/linear_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:minHeight="50dip"
        android:orientation="horizontal" >

        <TextView  android:layout_gravity="center_horizontal" 
            android:id="@+id/PropertyCollectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="40sp"
            android:text="01"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout  android:layout_gravity="center_horizontal" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/PropertyCollectionTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
            	android:text="01"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/PropertyCollectionTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18sp"
            	android:text="01"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>