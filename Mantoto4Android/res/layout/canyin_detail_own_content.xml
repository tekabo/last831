<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/canyin_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="15sp" >
    </TextView>

    <ImageView
        android:id="@+id/canyinImg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dip"
        android:src="@drawable/peisong"
        android:visibility="visible" />

    <TextView
        android:id="@+id/canyin_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#f03f3f"
        android:textSize="16sp" >
    </TextView>

    <TextView
        android:id="@+id/canyin_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="12sp" >
    </TextView>

    <Button
        android:id="@+id/goumaiImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="购   买"
        android:textColor="@color/white"
        android:background="@drawable/btn_download_normal"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#cccccc" />
    </LinearLayout>

</LinearLayout>