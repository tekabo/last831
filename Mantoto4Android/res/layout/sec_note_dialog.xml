<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/sec_dlg_bg">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="30dip"
		android:layout_marginTop="15dip">
		<ImageView android:id="@+id/popDialogTitleIcon"
			android:src="@drawable/sec_alert"
			android:layout_marginLeft="28dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<TextView android:id="@+id/popDialogTitle"
			android:textSize="24dip"
			android:textColor="#ffffffff"
			android:layout_marginLeft="-56dip"
			android:layout_weight="1"
			android:shadowDx="1.5"
			android:shadowDy="1.3"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:gravity="center" />
		<!--android:shadowRadius="0.5"
		android:shadowColor="#0f0f0f"加上报错
		-->
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:background="@drawable/sec_div_line"
		android:layout_marginTop="15dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
	</LinearLayout>

	<TextView
		android:id="@+id/popDialogInfo"
		android:textSize="16dip"
		android:textColor="#ffffffff"
		android:layout_weight="1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dip"
		android:layout_marginLeft="34dip" />

	<LinearLayout
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:layout_marginTop="20dip"
		android:layout_marginBottom="25dip">
		<LinearLayout
			android:id="@+id/linearButtonLeft"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center">
			<Button
				android:id="@+id/ButtonOK"
				android:background="@drawable/style_sec_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/txt_ok"
				android:textSize="16dip"
				android:textColor="#000000" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linearButtonRight"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center">
			<Button android:id="@+id/ButtonCancel"
				android:background="@drawable/style_sec_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/txt_cancel"
				android:textSize="16dip"
				android:textColor="#000000" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
