<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainRadio4ListItemLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="15dp" >


        <LinearLayout
            android:id="@+id/linear_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:lines="1"
                android:text=" 下单时间： "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
              android:id="@+id/CommitOrderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="2015-9-8 15:26:30"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
        
          <LinearLayout
            android:id="@+id/linear_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:lines="1"
                android:text=" 报修类型： "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
              android:id="@+id/RepairType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="上门维修"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:lines="1"
                android:text=" 订单进度： "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
              android:id="@+id/OrderProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="查看进度"
                android:textColor="#ffff0b20"
                android:textSize="16sp" />
        </LinearLayout>
       
  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:lines="1"
                android:text=" 报修详情： "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
              android:id="@+id/RepairContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="我家窗户需要修理"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>


</LinearLayout>