<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center_vertical" android:layout_height="wrap_content"
	android:background="@drawable/search_bg">
	<EditText android:id="@+id/search_key" android:layout_width="wrap_content" android:layout_weight="1"
		android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:paddingRight="5dip"
		android:singleLine="true" android:paddingLeft="40dip" android:hint="输入您要找的商品名称"
		android:textSize="16dip" android:background="@drawable/search_edit_bg" />
	<Button android:id="@+id/btn_search" android:textSize="16dip"
		android:textColor="@color/white" android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:background="@drawable/style_search_button"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="搜索" />
</LinearLayout>
