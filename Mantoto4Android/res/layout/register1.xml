<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical" >
<include android:id="@+id/IncludeMainTopBarInclude"  layout="@layout/include_main_topbar" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:orientation="vertical" >
        	<TextView 
        	    android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/register1_title1"
            	android:textColor="#666666"
            	android:textSize="12.0dip">
        	</TextView> 
    </LinearLayout>
    
     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="bottom"
            android:orientation="vertical" >

        	<RelativeLayout
        	    android:layout_width="fill_parent"
        	    android:layout_height="45dp"
        	    android:background="#ffffff"
        	    android:gravity="center" >

	           <EditText
	               android:id="@+id/Register1_edit1"
	               android:layout_width="fill_parent"
	               android:layout_height="45dp"
	               android:layout_alignParentBottom="true"
	               android:layout_alignParentTop="true"
	               android:layout_marginLeft="20dp" 
				   android:layout_marginRight="20dp"
	               android:background="@drawable/style_edittext_white"
	               android:ems="20"
	               android:gravity="center"
	               android:hint="@string/register1_edithint1"
	               android:singleLine="true"
	               android:textColor="#545454"
	               
                   android:textSize="@dimen/input_text_size" />

	           <ImageButton
	               android:id="@+id/Register1_edit1_clear_btn"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_alignRight="@+id/Register1_edit1"
	               android:layout_centerVertical="true"
	               android:background="@drawable/style_edittext_white"
	               android:src="@drawable/clear_txt" />

            </RelativeLayout>
        	
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:orientation="vertical" >
        	<TextView 
        	    android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/register1_title2"
            	android:textColor="#666666"
            	android:textSize="12.0dip"/>
    	</LinearLayout>
    	
     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="bottom"
            android:orientation="vertical" >

        	<RelativeLayout
        	    android:layout_width="fill_parent"
        	    android:layout_height="45dp"
        	    android:background="#ffffff"
        	    android:gravity="center" >

	           <EditText
	               android:id="@+id/Register1_edit2"
	               android:layout_width="fill_parent"
	               android:layout_height="45dp"
	               android:layout_alignParentBottom="true"
	               android:layout_alignParentTop="true"
	               android:layout_marginLeft="20dp" 
				   android:layout_marginRight="20dp"
	               android:background="@drawable/style_edittext_white"
	               android:ems="20"
	               android:gravity="center"
	               android:hint="@string/register1_edithint2"
	               android:singleLine="true"
	               android:textColor="#545454"
	               
                   android:textSize="@dimen/input_text_size" />

	           <ImageButton
	               android:id="@+id/Register1_edit2_clear_btn"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_alignRight="@+id/Register1_edit2"
	               android:layout_centerVertical="true"
	               android:background="@drawable/style_edittext_white"
	               android:src="@drawable/clear_txt" />

            </RelativeLayout>
        	
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:orientation="vertical" >
        	<TextView 
        	    android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/register1_title3"
            	android:textColor="#666666"
            	android:textSize="12.0dip"/>
    	</LinearLayout>
    	
       	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="24dip"
            android:background="#FFECEDED"
            android:gravity="top"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Register1_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/blue_btn_normal"
                android:text="@string/register1_next"
                android:textColor="@color/blue_btn_txt_normal"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>
 
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|center"
            android:layout_marginBottom="30dip"
            android:orientation="vertical" >
        	<TextView 
        	    android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/company_name"
            	android:textColor="#555555"
            	android:textSize="12.0dip"/>
        	    
        </LinearLayout>
</LinearLayout>