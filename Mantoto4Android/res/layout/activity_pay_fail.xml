<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/background_color"
    android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<include
			android:id="@+id/IncludeMainTopBarInclude"
			layout="@layout/include_main_topbar" />
	</LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
		android:layout_weight="20"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
		android:layout_weight="140"
        android:background="@color/white"
        android:orientation="horizontal"
		>

	       <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="match_parent"
			   >
	
	            <ImageView
					android:id="@+id/icon_fail"
				    android:layout_width="50dp"
	                android:layout_height="50dp"
	                android:background="@drawable/failpay"
					android:layout_centerVertical="true"
					android:layout_marginLeft="25dp"
					/>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_toRightOf="@id/icon_fail"
					android:layout_marginLeft="7dp"
					android:layout_alignTop="@id/icon_fail"
					android:layout_alignBottom="@id/icon_fail"
					>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						>

	
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:text="支付失败"
						android:textSize="24sp"
						android:textStyle="bold"
						android:textColor="@color/wifi_pay" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:layout_marginTop="5dp"
						android:text="支付失败请重新支付!"
						android:textSize="20sp"
						android:textColor="@color/gray" />
					</LinearLayout>
				</RelativeLayout>

		   </RelativeLayout>
      </LinearLayout>
      <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="0dp"
		  android:layout_weight="20"
       />
      <LinearLayout
	          android:layout_width="match_parent"
	          android:layout_height="0dp"
		      android:layout_weight="80"
	          android:gravity="center_vertical"
	          android:orientation="horizontal"
	          android:background="@color/white"
               			 >
	                       <TextView
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="充值金额"
	                            android:layout_marginLeft="20dp"
	                            android:textSize="16sp"
	                            android:textColor="@color/gray" />
	                        <TextView 
	                            android:layout_width="0dp"
	                            android:layout_weight="1"
	                            android:layout_height="match_parent"
	                            />
	
	                        <TextView
	                          
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_marginRight="20dp"
	                            android:text="¥10元"
	                            android:textSize="16sp"
	                            android:textColor="#909090" />
     </LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/white"
		>
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/list_line"
			android:layout_marginLeft="17dp"
			android:layout_marginRight="17dp"
			/>

	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/white"
		>
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/list_line"
			android:layout_marginLeft="17dp"
			android:layout_marginRight="17dp"
			/>

	</LinearLayout>

	<LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="0dp"
		android:layout_weight="80"
	                        android:gravity="center_vertical"
	                        android:orientation="horizontal"
	                        android:background="@color/white"
               			 >
	                     
	                        <TextView
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="代金券"
	                            android:layout_marginLeft="20dp"
	                            android:textSize="16sp"
	                            android:textColor="@color/gray" />
	                        <TextView 
	                            android:layout_width="0dp"
	                            android:layout_weight="1"
	                            android:layout_height="match_parent"
	                            />
	
	                        <TextView
	                     
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_marginRight="20dp"
	                            android:text="¥10元"
	                            android:textSize="16sp"
	                            android:textColor="#909090" />
	   </LinearLayout>
	<LinearLayout
	                        android:layout_height="0.5dp"
	                        android:layout_width="match_parent"
	                        android:background="#ffffff"
	                        >
	                        <View 
	                            android:layout_height="match_parent"
	                            android:layout_width="match_parent"
	                            android:background="@drawable/list_line"
	                            android:layout_marginLeft="20dp"
	                            android:layout_marginRight="20dp"
	                            />
	                        
	    </LinearLayout>
	    
	<LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
					android:layout_weight="80"
	                android:gravity="center_vertical"
	                android:orientation="horizontal"
	                android:background="@color/white"
               		>
	                     
	                        <TextView
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="实付金额"
	                            android:layout_marginLeft="20dp"
	                            android:textSize="16sp"
	                            android:textColor="@color/gray" />
	                        <TextView 
	                            android:layout_width="0dp"
	                            android:layout_weight="1"
	                            android:layout_height="match_parent"
	                            />
	
	                        <TextView
	                          
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_marginRight="20dp"
	                            android:text="¥10元"
	                            android:textSize="16sp"
	                            android:textColor="#909090" />
	 </LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0.7dp"
		android:background="@color/white"
		>
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/list_line"
			android:layout_marginLeft="17dp"
			android:layout_marginRight="17dp"
			/>

	</LinearLayout>




	 <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="0dp"
		 					android:layout_weight="60"
	                        android:gravity="center_vertical"
	                        android:orientation="horizontal"
	                        android:background="@color/white"
               			 >
	                     
	                        <TextView
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="还需支付金额"
	                            android:layout_marginLeft="20dp"
	                            android:textSize="16sp"
	                            android:textColor="@color/primary" />
	                        <TextView 
	                            android:layout_width="0dp"
	                            android:layout_weight="1"
	                            android:layout_height="match_parent"
	                            />
	
	                        <TextView
	                           android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_marginRight="20dp"
	                            android:text="¥10元"
	                            android:textSize="16sp"
	                            android:textColor="@color/primary"/>
	 </LinearLayout>
	
	   
       <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
		   			android:layout_weight="60"
                    android:background="@color/pay_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式"
                        android:textSize="16sp"
                        android:textColor="#646464" />
                </LinearLayout>

              

                <LinearLayout
                    android:id="@+id/weixinLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
					android:layout_weight="80"
                    android:background="@drawable/bg_linearlayout_pay"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:paddingLeft="17dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/weixin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:text="微信支付"
                        android:textSize="16sp"
                        android:textColor="@color/wifi_pay" />

                    <ImageView
                        android:id="@+id/weixinSelect"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/successed"
                        android:padding="1dp" />
                </LinearLayout>
                <LinearLayout 
	                        android:layout_height="1dp"
	                        android:layout_width="match_parent"
	                        android:background="#ffffff"
	                        >
	                        <View 
	                            android:layout_height="match_parent"
	                            android:layout_width="match_parent"
	                            android:background="@color/background_color"
	                            android:layout_marginLeft="20dp"
	                            android:layout_marginRight="20dp"
	                            />
	                        
	             </LinearLayout>
                
                 <LinearLayout
                    android:id="@+id/zhifubaoLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
					 android:layout_weight="80"
                    android:background="@drawable/bg_linearlayout_pay"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:paddingLeft="20dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/zhifu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="支付宝支付"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/wifi_pay" />

                    <ImageView
                        android:id="@+id/zhifubaoSelect"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/ring_normal"
                        android:padding="1dp" />
                </LinearLayout>
                <LinearLayout 
	                        android:layout_height="1dp"
	                        android:layout_width="match_parent"
	                        android:background="#ffffff"
	                        >
	                        <View 
	                            android:layout_height="match_parent"
	                            android:layout_width="match_parent"
	                            android:background="@color/background_color"
	                            android:layout_marginLeft="20dp"
	                            android:layout_marginRight="20dp"
	                            />
	                        
	            </LinearLayout>

                <LinearLayout
                    android:id="@+id/daijinquanLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
					android:layout_weight="80"
                    android:background="@drawable/bg_linearlayout_pay"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:paddingLeft="20dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/quan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text="代金券支付"
                        android:textSize="16sp"
                        android:textColor="@color/wifi_pay" />

                    <TextView
                        android:id="@+id/pay_couponTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="该订单不支持代金券支付"
                        android:textColor="@color/gray"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="13dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/payright" />
                </LinearLayout>
	 <LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="0dp"
		 android:layout_weight="240"
	    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="bottom"  
        >
	
	        <Button
	            android:id="@+id/payButton"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/blue_button_login2"
	            android:clickable="true"
	            android:onClick="onClick"
	            android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
	            android:text="确认"
	            android:textColor="@color/white"
	            android:textSize="@dimen/button_text_size" />
    </LinearLayout>
</LinearLayout>